<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- BACKGROUND GIF -->
    <ImageView
        android:id="@+id/loadingGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="1"/>

    <!-- CAMERA -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!-- OVERLAY -->
    <com.example.echosight.camera.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!-- CENTER CONTROLS -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/btnToggleScan"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:text="START"
            android:textSize="22sp"
            android:textColor="#00FFFF"
            android:background="@drawable/start_button_bg"
            android:layout_marginBottom="20dp"/>



    </LinearLayout>

    <!-- HELP BUTTON (ALWAYS TOP LEFT) -->
    <!-- HELP BUTTON (top-left) -->
    <Button
        android:id="@+id/btnHelp"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:text="HELP"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFF00"
        android:background="@drawable/help_button_bg"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- STOP BUTTON (top-right) -->
    <Button
        android:id="@+id/btnStop"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:text="STOP"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:background="@drawable/stop_button_bg"
        android:layout_gravity="top|end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>


</FrameLayout>
